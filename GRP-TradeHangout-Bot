_G.Settings = {
    Active = true; -- Main toggle
    Message = ""; -- The message you want to say. Ex. "You should join my group called noob gang"
}

--// \\--
local Settings = _G.Settings

--// Find Nearest Player \\--
while Settings.Active do wait(10)
    local localHum = game.Players.LocalPlayer.Character.HumanoidRootPart.Position
    local closestPlayer = nil
    local mag = math.huge

    for _, player in pairs(game.Players:GetPlayers()) do
        local distance = player:DistanceFromCharacter(localHum)
        if distance < mag then
            if player.Name ~= game.Players.LocalPlayer.Name then
                mag = distance
                closestPlayer = player
                game.Players.LocalPlayer.Character.Humanoid:MoveTo(closestPlayer.Character.HumanoidRootPart.Position)
            end
        end
    end
    wait(2)

    --// Messages \\--
    game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("Hello, "..closestPlayer.Name, "All")
    wait(3)
    game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(Settings.Message, "All")
    wait(5)

    print(closestPlayer)
end
